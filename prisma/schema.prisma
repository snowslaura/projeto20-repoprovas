generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Users{

  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model Categories{
id Int @id @default(autoincrement()) 
name String @unique

Tests Tests[]

@@map("categories")
}

model Tests{
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  categoryId Int
  teacherDisciplineId Int

  Categories Categories @relation(fields: [categoryId], references: [id])
  TeacherDiscipline TeacherDiscipline @relation(fields: [teacherDisciplineId], references: [id])
  
  @@map("tests")
}


model Teachers{
  id Int @id @default(autoincrement())
  name String

  TeacherDiscipline TeacherDiscipline []

@@map("teachers")
}

model Terms{
  id Int @id @default(autoincrement())
  number Int

  Disciplines Disciplines[]

  @@map("terms")
}

model Disciplines{
  id Int @id @default(autoincrement())
  name String
  termId Int

  TeacherDiscipline TeacherDiscipline []
  

  Terms Terms @relation(fields: [termId], references: [id])

  @@map("disciplines")
}

model TeacherDiscipline{
  id Int @id @default(autoincrement())
  teacherId Int
  disciplineId Int
  Tests Tests[]

  Teachers Teachers @relation(fields: [teacherId], references: [id])
  Disciplines Disciplines @relation(fields: [disciplineId], references: [id])

  @@map("teacherDiscipline")
}